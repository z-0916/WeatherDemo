<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/city_item_view"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="3dp"
        app:contentPadding="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp">

        <RelativeLayout
            android:id="@+id/ic_card_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_card_3">

            <TextView
                android:id="@+id/tv_item_city"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="西安"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_city"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="43dp"
                android:text="阴"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_item_now_weather"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="38dp"
                android:text="最高"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_item_max_min_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_now_weather"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="38dp"
                android:text="最低4℃"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/im_delete"
                android:visibility="gone"
                android:layout_width="35dp"
                android:layout_height="27dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="7dp"
                android:src="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/im_delete_left"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="7dp"
                android:src="@drawable/ic_city_delete_left" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>