<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/im_set_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_back"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="设置"
            android:textSize="23sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="15sp"
                android:text="天气提醒"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:id="@+id/tv_morning"
                    android:textSize="20sp"
                    android:text="早上天气提醒"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_morning_below"
                    android:layout_below="@id/tv_morning"
                    android:textSize="10sp"
                    android:text="开启后，7：00将收到天气推送"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:id="@+id/sw_morning"
                    android:layout_alignParentRight="true"
                    android:layout_width="60dp"
                    android:layout_marginLeft="-100dp"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:id="@+id/tv_error"
                    android:textSize="20sp"
                    android:text="天气预警提醒"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_error_below"
                    android:layout_below="@id/tv_error"
                    android:textSize="12sp"
                    android:text="开启后，将会收到气象灾害预警推送"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:layout_alignParentRight="true"
                    android:layout_width="60dp"
                    android:layout_marginLeft="-100dp"
                    android:layout_centerInParent="true"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>